.rankingCom {
  width: 100vw;
  height: 100vh;
}
.title{
  width: 60vw;
  height: 120rpx;
  background-image: url(https://636c-cloud1-5gde52mzca59cee4-1305972572.tcb.qcloud.la/%E9%A5%AE%E8%8C%B6%E6%8E%92%E8%A1%8C.png?sign=b1d4598c38347ca59e8fe59ca29a3308&t=1623559072);
