.totalRank{
    color: #000;
    text-align: center;
    font-size: 30rpx;
    margin-top: 20rpx;
}
.authorBtn{
    background-color: #fff;
    color: darkcyan;
    width: 30vw;
    margin-left: 35vw;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
}
.loadingText{
    text-align: center;
    width: 100vw;
    margin-top: 20rpx;
}
.rankDetail{
    width: 90vw;
    margin-left: 5vw;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx 0;
    margin-bottom: 40rpx;
    margin-top: 30rpx;
}
.detailItem{
    display: flex;
    padding: 10rpx 20rpx;
    align-items: center;
}
.userImgCom{
    flex: 1;
    width: 60rpx;
    height: 60rpx;
}
.userImg{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.username{
    color: gray;
    font-size: 42rpx;
    flex: 3;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.reward{
    flex: 4;
    color: #f40;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}
.rankSpe{
    width: 90rpx;
    height: 40rpx;
    flex: 2;
}
.rankImg{
    width: 30rpx;
    height: 40rpx;
    flex: 2;
}
.rankTen{
    width: 50rpx;
    height: 40rpx;
    flex: 2;
}