.title {
  font-size: 78rpx;
  text-align: center;
  text-shadow: 2px 2px 2px #f40;
}
.titleFlex {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
}
.voiceIcon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.myVideo {
  width: 100vw;
}
.article {
  text-shadow: 2px 2px 2px blue;
  font-size: 56rpx;
  padding: 20rpx;
}
.largeTitle {
  font-size: 68rpx;
  margin-top: 20rpx;
}
.button {
  margin-top: 40rpx;
  background-color: cornflowerblue;
  display: inline-block;
  margin-left: 50%;
  transform: translateX(-50%);
  padding: 20rpx 80rpx;
  border: 1px solid #fff;
  border-radius: 5rpx;
}
